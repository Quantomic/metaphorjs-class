{
    "standalone": {
        "auto": true,
        "wrap": true,
        "target": "dist/metaphorjs.class.js",
        "files": [
            "../metaphorjs/src/MetaphorJs.js",
            "../metaphorjs-namespace/src/metaphorjs.namespace.js",
            "src/metaphorjs.class.js"
        ]
    },

    "module": {
        "auto": true,
        "target": "dist/metaphorjs.class.amd.js",
        "files": [
            "../metaphorjs/src/MetaphorJs.js",
            "src/metaphorjs.class.js"
        ],
        "prepend": [
            "src/amd/prepend.js"
        ],
        "append": [
            "src/amd/append.js"
        ]
    },

    "test": {
        "target": "test/lib/metaphorjs.class.amd.js",
        "files": [
            "../metaphorjs/src/MetaphorJs.js",
            "../metaphorjs-namespace/src/metaphorjs.namespace.js",
            "src/metaphorjs.class.js"
        ],
        "append": [
            "test/lib/append.js"
        ]
    },

    "compile-standalone": {
        "target": "dist/metaphorjs.class.min.js",
        "compile": "standalone"
    }
}