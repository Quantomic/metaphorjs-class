{
    "standalone": {
        "wrap": true,
        "global": true,
        "target": "dist/metaphorjs.class.js",
        "files": [
            "../metaphorjs/src/MetaphorJs.js",
            "src/metaphorjs.class.js"
        ],
        "expose": [
            ["MetaphorJs.lib", "Namespace"],
            ["MetaphorJs.lib", "Class"]
        ]
    },

    "npm": {
        "target": "dist/metaphorjs.class.npm.js",
        "files": [
            ["src/metaphorjs.class.js", {"keepExports": true}]
        ],
        "omit": [
            "../metaphorjs-namespace/src/metaphorjs.namespace.js"
        ],
        "require": {
            "metaphorjs-namespace": "Namespace"
        }
    },

    "amd": {
        "target": "dist/metaphorjs.class.amd.js",
        "files": [
            "src/metaphorjs.class.js"
        ],
        "omit": [
            "../metaphorjs-namespace/src/metaphorjs.namespace.js"
        ],
        "define": {
            "name": "metaphorjs-class",
            "deps": {"metaphorjs-namespace": "Namespace"},
            "return": "Class"
        }
    },

    "compile-standalone": {
        "target": "dist/metaphorjs.class.min.js",
        "compile": "standalone"
    },

    "compile-amd": {
        "target": "dist/metaphorjs.class.amd.min.js",
        "compile": "amd"
    }
}