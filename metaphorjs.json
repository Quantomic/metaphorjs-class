{
    "version": "1.0.10",
    "description": "MetaphorJs class system",

    "push": [
        "github"
    ],
    "test": {
        "cmd": "mocha"
    },


    "docs": {
        "": {
            "out": "docs",
            "renderer": "default",
            "hooks": "hooks",
            "src": [
                "src/**"
            ],
            "includeExternal": false,
            "data": {
                "title": "MetaphorJs.Class",
                "version": "v@{version}"
            }
        }
    },

    "build": {
        "standalone": {
            "wrap": true,
            "global": true,
            "target": "dist/metaphorjs.class.js",
            "files": [
                "../metaphorjs/src/MetaphorJs.js",
                ["src/metaphorjs.class.js", {"as": "Class"}]
            ],
            "expose": [
                "Namespace",
                "Class"
            ]
        },
        "npm": {
            "target": "dist/metaphorjs.class.npm.js",
            "compile": false,
            "files": [
                [
                    "src/metaphorjs.class.js",
                    {
                        "keepExports": true
                    }
                ]
            ],
            "omit": [
                "../metaphorjs-namespace/src/metaphorjs.namespace.js"
            ],
            "require": {
                "metaphorjs-namespace": "Namespace"
            }
        },
        "amd": {
            "target": "dist/metaphorjs.class.amd.js",
            "files": [
                ["src/metaphorjs.class.js", {"as": "Class"}]
            ],
            "omit": [
                "../metaphorjs-namespace/src/metaphorjs.namespace.js"
            ],
            "define": {
                "name": "metaphorjs-class",
                "deps": {
                    "metaphorjs-namespace": "Namespace"
                },
                "return": "Class"
            }
        }
    }
}